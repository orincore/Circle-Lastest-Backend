# ============================================
# Circle Backend - Production Environment
# Copy this to .env.production and fill in values
# ============================================

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=8080
SERVICE_TYPE=api

# ============================================
# Database (Supabase)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password  # Uncomment if using password

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d

# ============================================
# AWS S3 (for file uploads)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=circle-uploads

# ============================================
# Email (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Circle App <noreply@circle.app>

# ============================================
# Google OAuth
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# Push Notifications (Expo)
# ============================================
EXPO_ACCESS_TOKEN=your-expo-access-token

# ============================================
# Payment Gateway (Cashfree)
# ============================================
CASHFREE_APP_ID=your-cashfree-app-id
CASHFREE_SECRET_KEY=your-cashfree-secret-key
CASHFREE_ENV=PROD

# ============================================
# Admin Configuration
# ============================================
ADMIN_API_KEY=your-admin-api-key

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn  # Optional

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=https://circle.orincore.com,https://api.circle.orincore.com

# ============================================
# Timezone
# ============================================
TZ=Asia/Kolkata
