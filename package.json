{
  "name": "circle-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start:ts": "tsx src/index.ts",
    "start:ts-production": "NODE_ENV=production tsx src/index.ts",
    "start:pm2-ts": "pm2 start src/index.ts --name circle-backend --interpreter tsx",
    "stop:pm2": "pm2 stop circle-backend",
    "restart:pm2": "pm2 restart circle-backend",
    "build": "rm -rf dist && node --max-old-space-size=768 --optimize-for-size --gc-interval=50 --max-semi-space-size=64 ./node_modules/.bin/tsc -p . --incremental",
    "build:fast": "rm -rf dist && node --max-old-space-size=768 --optimize-for-size --gc-interval=50 --max-semi-space-size=64 ./node_modules/.bin/tsc --build",
    "build:production": "NODE_ENV=production npm run build",
    "build:watch": "npx tsc -p . --watch",
    "prebuild": "node -e \"console.log('Free memory:', Math.round(process.memoryUsage().heapUsed / 1024 / 1024), 'MB')\"",
    "build:monitored": "bash scripts/build-with-monitoring.sh",
    "build:chunked": "bash scripts/build-chunked.sh",
    "build:minimal": "rm -rf dist && NODE_OPTIONS='--max-old-space-size=512 --optimize-for-size' npx tsc --build --verbose",
    "setup:swap": "bash scripts/setup-swap.sh",
    "memory:check": "free -h && df -h",
    "server:start": "bash scripts/start-server.sh",
    "start": "node dist/index.js",
    "vercel-build": "npm run build",
    "render-build": "npm install && npm run build",
    "start:optimized": "node dist/server/app.js",
    "start:worker": "node dist/server/workers/matchmaking-worker.js",
    "start:cluster": "pm2 start ecosystem.config.js",
    "redis:start": "docker-compose up -d redis",
    "redis:stop": "docker-compose stop redis",
    "redis:cli": "redis-cli",
    "health": "curl http://localhost:3000/health",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/s3-request-presigner": "^3.665.0",
    "@supabase/supabase-js": "^2.49.1",
    "@types/bcrypt": "^6.0.0",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.2",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cashfree-pg": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "google-auth-library": "^9.14.1",
    "googleapis": "^131.0.0",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "redis": "^4.6.14",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.24",
    "@vercel/node": "^5.5.8",
    "eslint": "^8.57.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
